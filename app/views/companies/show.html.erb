<h2>
    <div class="menu_small">
      <%= link_to 'upravit', edit_company_path(@company) %>
      <%= link_to 'smazat', @company, :confirm => 'Jste si opravdu jistí se smazáním uživatele: '+@company.name+'?', :method => :delete %>
    </div>
  Firma : <%=h @company.name %>
</h2>

<p>
  <b>Ico:</b>
  <%=h @company.ico %>
</p>

<p>
  <b>Dic:</b>
  <%=h @company.dic %>
</p>

<p>
  <b>Account:</b>
  <%=h @company.account %>
</p>

<h3>
     <div class="menu_small">
       <%= link_to 'přidat kontakt', new_company_contact_path(@company)  %>
     </div>
     KONTAKT NA FIRMU
 </h3>

 <div id="contacts">
  <% for contact in @company.contacts %>
    <% if contact.deleted.blank? %>
     <% if @current_user.mine?(contact) || @current_user.admin? || @current_user.produce? %>
        <div class="menu_small">
           <%= link_to 'upravit kontakt', edit_company_contact_path(@company, contact) %>
           <%= link_to 'smazat kontakt', company_contact_path(@company, contact), :confirm => 'Jste si opravdu jisti ke smazani '+contact.company.name+' kontaktu?', :method => :delete %>
        </div>
      <% end %>
      <ul class="odstavec2">
        <%=  print_field( contact.phone , "telefon: ", "li") %>
        <%=  print_mail_field( contact.email , "email: ", "li") %>
        <%=  print_address_field(contact.address, "adresa:  ", "li" )%>
        <%=  print_field( contact.note , "poznámka: ", "li") %>
      </ul>
    <% end %>
<% end %>

 </div>

<h3>
    <div class="menu_small">
       <%= link_to 'přidat uživatele', new_company_user_path(@company)  %>
     </div>
    členové firmy
</h3>
<ul>
<% for user in User.find(:all ,:conditions => ["deleted is null AND company_id = :comp ", {:comp => @company.id}]).sort_by{|u| u.surname.downcase} %>
  <li><%= link_to user.fullname, user %></li>
<% end %>
</ul>

<h3>
    <div class="menu_small">
        <%= link_to 'přidat projekt', new_company_project_path(@company) %>
    </div>
    projekty firmy</h3>
<ul>
  <% for project in Project.find(:all,  :conditions => ["project_id is null AND company_id = :comp", {:comp => @company.id}]) %>
  <li><%= link_to project.name, project %>
    <% if project.projects.size > 0 %>
        <ul>
            <% for subproject in project.projects %>
                <li><%= link_to subproject.name, subproject %></li>
            <% end %>
        </ul>
    <% end %>
  </li>
<% end %>
</ul>