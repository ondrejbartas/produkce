<h2>
    <div class="menu_small">
        <%= link_to 'New machine', new_machine_path %>
    </div>
    Seznam strojů
</h2>

<table>
  <tr>
    <th>název</th>
    <th>poznámka</th>
    <th>cena za hodinu</th>
    <th colspan="2">administrace</th>
  </tr>

<% for machine in @machines %>
  <tr class="<%= cycle("even", "odd") %>" height="30">
    <th><%=h machine.name %></th>
    <td><%=h machine.note %></td>
    <td><%=h machine.price %></td>
    <td><%= link_to 'upravit', edit_machine_path(machine) %></td>
    <td><%= link_to 'smazat', machine, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

